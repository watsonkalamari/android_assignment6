<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/productsans_regular</item>
    </style>

    <!-- Style of the thumbnail images used for the fields -->
    <style name="AppTheme.ImageView">
        <item name="tint">@color/colorDarkGray</item>
    </style>

    <!-- Style of the EditText elements used in the Contact Form activity -->
    <style name="AppTheme.ContactForm.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Style of the Button used in the Contact Form activity -->
    <style name="AppTheme.ContactForm.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Style of the TextView elements used in the Contact Info activity -->
    <style name="AppTheme.ContactInfo.TextView" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <!-- Style of the HorizontalDivider view elements used in the Contact Info activity -->
    <style name="AppTheme.ContactInfo.HorizontalDivider" parent="AppTheme">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/colorLightGray</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Style of the Chip elements used in the Contact Info activity -->
    <style name="AppTheme.ContactInfo.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipIconTint">@android:color/white</item>
        <item name="chipBackgroundColor">@color/colorBlue</item>
    </style>

</resources>
