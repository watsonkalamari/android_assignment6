<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="373dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phone_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/phone_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/lName_ed" />

    <ImageView
        android:id="@+id/contact_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/secondary_vertical_spacing"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_perm_identity_gray_smaller" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fName_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_spacing"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/first_name_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lName_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/last_name_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/fName_ed" />

    <ImageView
        android:id="@+id/phone_imgv"
        style="@style/AppTheme.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxlarge"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_imgv"
        app:srcCompat="@drawable/ic_phone_black_24dp" />

    <ImageView
        android:id="@+id/email_imgv"
        style="@style/AppTheme.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_imgv"
        app:srcCompat="@drawable/ic_email_black_24dp" />

    <ImageView
        android:id="@+id/address_imgv"
        style="@style/AppTheme.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_imgv"
        app:srcCompat="@drawable/ic_place_black_24dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/address_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/address_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_ed" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/website_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/website_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/address_ed" />

    <ImageView
        android:id="@+id/www_imgv"
        style="@style/AppTheme.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xlarge"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_imgv"
        app:srcCompat="@drawable/ic_public_black_24dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_ed"
        style="@style/AppTheme.ContactForm.EditText"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_smlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:hint="@string/email_hint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_ed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveContact_btn"
        style="@style/AppTheme.ContactForm.Button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_mxlarge"
        android:layout_marginEnd="@dimen/spacing_middle"
        android:text="@string/save_button_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/website_ed" />

</androidx.constraintlayout.widget.ConstraintLayout>